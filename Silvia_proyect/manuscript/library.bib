issn = {00033472},
journal = {Animal Behaviour},
keywords = {access,animal,geography,movement,property,resource,space use,territoriality},
number = {xxxx},
publisher = {Elsevier Ltd},
title = {{Animal territoriality, property and access: a collaborative exchange between animal behaviour and the social sciences}},

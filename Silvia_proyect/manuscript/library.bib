doi = {10.1073/pnas.1717319115},
file = {:C$\backslash$:/Users/Silvia O/Downloads/Barrera-Guzman{\_}2018a{\_}PNAS.pdf:pdf},
issn = {10916490},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Amazon,Hybrid speciation,Lepidothrix vilasboasi,Ornamentation,Structural color},
number = {2},
pages = {E218--E225},
title = {{Hybrid speciation leads to novel male secondary sexual ornamentation of an Amazonian bird}},
volume = {115},
year = {2017}
}

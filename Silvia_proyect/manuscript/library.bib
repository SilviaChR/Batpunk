doi = {10.1093/beheco/arp165},
file = {:C$\backslash$:/Users/Silvia O/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Caro, Stankowich - 2010 - The function of contrasting pelage markings in artiodactyls.pdf:pdf},

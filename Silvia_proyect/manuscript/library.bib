issn = {08935785},
journal = {Pigment Cell Research},
keywords = {Aminohydroxyphenylalanine,Eumelanin,High performance liquid chromatography,Pheomelanin,Pyrrole-2,3, 5-tricarboxylic acid},
number = {5},
pages = {523--531},
pmid = {12950732},

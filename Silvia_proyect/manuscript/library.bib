doi = {10.1636/b11-18.1},
file = {:C$\backslash$:/Users/Silvia O/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Higgins, Goodnight - 2011 - Developmental response to low diets by giant Nephila clavipes females (Araneae Nephilidae).pdf:pdf},
issn = {0161-8202},
journal = {Journal of Arachnology},
keywords = {believed due to fecundity,darwin 1871,female,is generally,phenotypic plasticity,rare large prey hypothesis,reverse,selection,sexual size dimorphism,ssd,survivorship},
number = {3},
pages = {399--408},

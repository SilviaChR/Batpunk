issn = {1061-2971},
journal = {Restoration Ecology},
keywords = {Caribbean,Exotics,Secondary succession,Tropics},
number = {4},
pages = {328--338},
title = {{Forest Regeneration in a Chronosequence of Tropical Abandoned Pastures: Implications for Restoration Ecology}},

issn = {14359448},
journal = {Animal Cognition},
keywords = {Cognitive ecology,Counting,Food hoarding,Nephila,Web spider},
number = {1},
pages = {307--314},
title = {{Nephila clavipes spiders (Araneae: Nephilidae) keep track of captured prey counts: testing for a sense of numerosity in an orb-weaver}},

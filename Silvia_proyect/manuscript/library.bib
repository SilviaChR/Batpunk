journal = {Ecology},
keywords = {Adaptive models,Frugivory,Heterogeneous environments,Ideal free distribution,Nonrandom dispersal,Safe sites,Seed dispersal,Seed survival},
number = {5},
pages = {1538--1548},
title = {{Incorporating density dependence into the directed-dispersal hypothesis}},
volume = {91},
year = {2010}
}

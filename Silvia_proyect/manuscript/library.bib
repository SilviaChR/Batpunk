file = {:C$\backslash$:/Users/Silvia O/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Conenna et al. - 2019 - Movement seasonality in a desert-dwelling bat revealed by miniature GPS loggers.pdf:pdf},
issn = {20513933},
journal = {Movement Ecology},
keywords = {Animal movement,Biologging,GPS technology,Lavia frons,Seasonal changes,Telemetry},
number = {1},
